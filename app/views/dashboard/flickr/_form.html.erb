<div class="form-group" id="flickr-form">
  <%= simple_form_for :flickr, url: flickr_search_path, remote: true do |f| %>
    <%= f.input :flickr_tags, as: :search, id: 'flickr_search' %>
    <%= f.button :submit %>
  <% end %>
  <% if @list %>
    <% @list.each do |photo| %>
      <%= link_to image_tag(FlickRaw.url_t(photo)), '#', class: "flickr-image-link" %>
    <% end %>
  <% end %>
</div>
